import os

env = Environment( ENV = os.environ,
                   PDFLATEX = 'xelatex' )

tmpl = Glob( 'xdthesis.c*' )

pdf = env.PDF( [ 'main.tex' ] )
Depends( pdf, [ 'cover.tex', 'refs.bib' ] )
Depends( pdf, Glob( 'ch*.tex' ) )

